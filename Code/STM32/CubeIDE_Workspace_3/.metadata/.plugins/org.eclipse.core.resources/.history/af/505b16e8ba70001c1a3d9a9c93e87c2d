void Custom_STM_App_Notification(Custom_STM_App_Notification_evt_t *pNotification)
{
  /* USER CODE BEGIN CUSTOM_STM_App_Notification_1 */

  /* USER CODE END CUSTOM_STM_App_Notification_1 */
  switch(pNotification->Custom_Evt_Opcode)
  {
    /* USER CODE BEGIN CUSTOM_STM_App_Notification_Custom_Evt_Opcode */

    /* USER CODE END CUSTOM_STM_App_Notification_Custom_Evt_Opcode */

  /* update_sw */
    case CUSTOM_STM_UPDATE_SWITCH_READ_EVT:
      /* USER CODE BEGIN CUSTOM_STM_UPDATE_SWITCH_READ_EVT */

      /* USER CODE END CUSTOM_STM_UPDATE_SWITCH_READ_EVT */
      break;

    case CUSTOM_STM_UPDATE_SWITCH_WRITE_EVT:
      /* USER CODE BEGIN CUSTOM_STM_UPDATE_SWITCH_WRITE_EVT */
        if(pNotification->DataTransfered.pPayload[0] == 0x00){ /* ALL Deviceselected - may be necessary as LB Routeur informs all connection */
          if(pNotification->DataTransfered.pPayload[1] == 0x01)
          {
        	HAL_GPIO_WritePin(GPIOB, GPIO_PIN_1, GPIO_PIN_SET);
            APP_DBG_MSG("-- P2P APPLICATION SERVER  : LED1 ON\n");
            APP_DBG_MSG(" \n\r");
            Custom_App_Context.LedControl.Led1=0x01; /* LED1 ON */
          }
          if(pNotification->DataTransfered.pPayload[1] == 0x00)
          {
        	HAL_GPIO_WritePin(GPIOB, GPIO_PIN_1, GPIO_PIN_RESET);
            APP_DBG_MSG("-- P2P APPLICATION SERVER  : LED1 OFF\n");
            APP_DBG_MSG(" \n\r");
            Custom_App_Context.LedControl.Led1=0x00; /* LED1 OFF */
          }
        }
  	  //HAL_GPIO_WritePin(GPIOB, GPIO_PIN_1, GPIO_PIN_SET);

      /* USER CODE END CUSTOM_STM_UPDATE_SWITCH_WRITE_EVT */
      break;

    default:
      /* USER CODE BEGIN CUSTOM_STM_App_Notification_default */

      /* USER CODE END CUSTOM_STM_App_Notification_default */
      break;
  }
  /* USER CODE BEGIN CUSTOM_STM_App_Notification_2 */

  /* USER CODE END CUSTOM_STM_App_Notification_2 */
  return;
}

